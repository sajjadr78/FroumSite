<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="createTopicModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Create Topic</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="body">
                <!-- Modal body content will be loaded dynamically -->
            </div>
        </div>
    </div>
</div>


@section Scripts {


    <script>
        $(function () {
            $("#btnLogin").click(function () {
                $.get("/Account/Login", function (result) {
                    $("#Modal").modal();
                    $("#ModalLabel").html("ورود کاربر");
                    $("#body").html(result);
                });
            });
            $("#btnRegister").click(function () {
                $.get("/Account/Register", function (result) {
                    $("#Modal").modal();
                    $("#ModalLabel").html("ثبت نام کاربر");
                    $("#body").html(result);
                });
            });
        });
    </script>



}