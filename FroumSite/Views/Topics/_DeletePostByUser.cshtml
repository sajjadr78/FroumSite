@model Post
@{
    ViewData["Title"] = "حذف پست";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="ConfirmDeletePost" onsubmit="return ajaxSavePost(this)">
            <div class="form-group">
                <h3 class="bg-danger text-white">
                    آیا پست حذف شود ؟
                </h3>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="بله" />
                <a class="btn btn-success" data-dismiss="modal">خیر</a>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script src="~/js/Custom.js"></script>
}