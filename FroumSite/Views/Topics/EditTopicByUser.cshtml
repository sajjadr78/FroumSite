@model FroumSite.Areas.Admin.Models.ViewModels.TopicsViewModel

@{
    ViewData["Title"] = "ویرایش تاپیک";
}

<form class="col-4" asp-action="EditConfirmed" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>



    <div class="form-group">
        <label asp-for="RoomName"></label>
        <select asp-for="RoomId" class="form-control">
            @foreach (var item in Model.Rooms)
            {
                if (item.Id == Model.RoomId)
                {
                    <option value="@item.Id" selected="selected">@item.Title</option>
                }
                else
                {
                    <option value="@item.Id">@item.Title</option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <input class="form-control btn btn-success" type="submit" value="ذخیره" />
    </div>

</form>