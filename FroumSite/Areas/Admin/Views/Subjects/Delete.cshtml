
@model Subject
@{
    ViewData["Title"] = "حذف موضوع";
}

<form method="post" asp-action="DeleteConfirmed">

    <label class=" form-control">
        @Html.DisplayNameFor(model=>model.Title) : @Html.DisplayFor(model=>model.Title)

    </label>


    <h3 class="bg-danger text-white p-2 mb-2 mt-2 col-6">
        آیا می خواهید موضوع بالا حذف شود ؟
    </h3>

    <input type="submit" class="btn btn-danger" value="بله" />
    <a class="btn btn-success" asp-action="Subjects" asp-controller="Home">خیر</a>
</form>

        