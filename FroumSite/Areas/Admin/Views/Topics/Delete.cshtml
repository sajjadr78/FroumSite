@model FroumSite.Areas.Admin.Models.ViewModels.TopicsViewModel
@{
    ViewData["Title"] = "حذف تاپیک";
    Layout = null;
}

<form method="post" asp-action="DeleteConfirmed" onsubmit="return DeleteEntityByAdmin(this,'topics-admin-panel',@Model.Id)">

    


    <h3 class="bg-danger text-white p-2 mb-2 mt-2 col-12">
        آیا می خواهید تاپیک با عنوان 
        <span>
            <span class="text-black-50">&#10090;</span>
            <span>@Model.Title</span>
            <span class="text-black-50">&#10091;</span>
        </span>
        حذف شود؟
    </h3>

    <input type="submit" class="btn btn-danger" value="بله" />
    <a class="btn btn-success" asp-action="Topics" asp-controller="Home">خیر</a>
</form>

        